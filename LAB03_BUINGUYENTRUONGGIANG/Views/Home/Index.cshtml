@model IEnumerable<Lab03_BuiNguyenTruongGiang.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul class="course">
        @foreach (var item in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @item.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @item.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @item.Lecturer.Name
                        </span>
                        <span class="category">
                            @item.Category.Name
                        </span>
                        <button data-course-id="@item.Id" class="btn btn-default btn-sm js-toogle-attendance">Going?</button>
                    </div>
                </li>
            }
    </ul>
    @section scripts 
    {
        <script>
            $(document).ready(function () {
                $(".js-toogle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post('/api/attendances', { courseId: button.attr("data-course-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        })
                        .fail(function () {
                            alert("Something failed!");
                        })
                })
            })
        </script>
    }
</div>